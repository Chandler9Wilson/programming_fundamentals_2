{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  // Usefull variables https://code.visualstudio.com/docs/editor/variables-reference
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build current file",
      "type": "shell",
      "command": "g++",
      "options": {
        "cwd": "${fileDirname}"
      },
      "args": [
        "${fileBasename}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}